<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/design_dp_16"
        android:layout_marginRight="@dimen/design_dp_16"
        android:layout_marginBottom="@dimen/design_dp_8"
        android:layout_marginTop="@dimen/design_dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/background"
                android:layout_width="@dimen/design_dp_64"
                android:layout_height="@dimen/design_dp_64"
                android:background="@color/colorPrimary" />
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/design_dp_48"
                android:layout_height="@dimen/design_dp_48"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/design_dp_8"
                android:background="@drawable/ic_public_white_48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/design_dp_8"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image"
                android:layout_toRightOf="@+id/image">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some Nmae" />

                <TextView
                    android:id="@+id/last_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/last_date"
                    android:text="15422884" />

                <TextView
                    android:id="@+id/last_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:text="16.09.16" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>