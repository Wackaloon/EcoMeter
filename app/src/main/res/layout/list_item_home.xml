<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:padding="16dp"
            android:src="@drawable/ic_public_white_48dp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/design_dp_8"
            android:layout_toRightOf="@+id/image">

            <TextView
                android:id="@+id/name"
                style="@style/AppTheme.TextViewMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some Nmae" />

            <TextView
                android:id="@+id/last_value_text"
                style="@style/AppTheme.TextViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="Value:" />

            <TextView
                android:id="@+id/last_date_text"
                style="@style/AppTheme.TextViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/last_value_text"
                android:layout_alignParentLeft="true"
                android:text="Date:" />

            <TextView
                android:id="@+id/last_value"
                style="@style/AppTheme.TextViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/last_value_text"
                android:text="15422884" />

            <TextView
                android:id="@+id/last_date"
                style="@style/AppTheme.TextViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/last_value"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/last_date_text"
                android:gravity="right"
                android:text="16.09.16" />


            <ImageView
                android:id="@+id/plus"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_add_circle_outline_black_48dp"
                android:tint="@color/colorPrimaryDark"/>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>