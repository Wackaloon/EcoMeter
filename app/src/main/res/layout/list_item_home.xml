<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_dp_8"
        android:layout_marginLeft="@dimen/design_dp_16"
        android:layout_marginRight="@dimen/design_dp_16"
        android:layout_marginTop="@dimen/design_dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_dp_70">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/design_dp_70"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:padding="@dimen/design_dp_12"
                android:src="@drawable/ic_public_white_48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/design_dp_8"
                android:layout_toRightOf="@+id/image">

                <TextView
                    android:id="@+id/name"
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/design_dp_8"
                    android:text="Some Nmae" />

                <TextView
                    android:id="@+id/last_value"
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/design_dp_8"
                    android:paddingBottom="@dimen/design_dp_8"
                    android:text="15422884" />

                <TextView
                    android:id="@+id/last_date"
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/design_dp_8"
                    android:layout_marginTop="@dimen/design_dp_8"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="right"
                    android:text="16.09.16"
                    android:textSize="@dimen/fonts_sizes_14" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>