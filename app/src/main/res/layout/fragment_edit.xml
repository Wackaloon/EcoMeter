<?xml version="1.0" encoding="utf-8"?>
<com.alexanderageychenko.ecometer.Model.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:elevation="3dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_dp_16"
        android:layout_marginLeft="@dimen/design_dp_16"
        android:layout_marginRight="@dimen/design_dp_16"
        android:layout_marginTop="@dimen/design_dp_16"
        app:cardElevation="6dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/design_dp_8">
        <TextView
            android:id="@+id/title"
            style="@style/AppTheme.TextViewMain"
            android:layout_margin="@dimen/design_dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fonts_sizes_22"
            android:layout_centerHorizontal="true"
            android:text="Edit meter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/title"
            android:padding="@dimen/design_dp_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_dp_70"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="Meter Type" />

                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_dp_70"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:text="Meter Position" />

                <Spinner
                    android:id="@+id/spinner_position"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_dp_70"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meter Name" />

                <EditText
                    android:id="@+id/name_input"
                    style="@style/AppTheme.TextViewMain"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:inputType="textCapWords|text|textAutoComplete"
                    android:imeOptions="actionDone"
                    android:layout_marginLeft="@dimen/design_dp_8"
                    android:gravity="right|center"
                    android:hint="Optional..." />
            </LinearLayout>


        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/done"
        style="@style/AppTheme.ButtonShadow.Button"
        android:layout_width="@dimen/button_rounded_width"
        android:layout_height="@dimen/button_rounded_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/design_dp_40"
        android:layout_marginTop="@dimen/design_dp_8"
        android:background="@drawable/button_green_brand"
        android:text="Done"
        android:visibility="visible" />
</com.alexanderageychenko.ecometer.Model.ExRelativeLayout>