<?xml version="1.0" encoding="utf-8"?>
<com.alexanderageychenko.ecometer.Model.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/done"
        android:layout_marginBottom="@dimen/design_dp_8"
        android:layout_marginTop="@dimen/design_dp_8"/>

    <Button
        android:id="@+id/done"
        style="@style/AppTheme.ButtonShadow.Button"
        android:layout_width="@dimen/button_rounded_width"
        android:layout_height="@dimen/button_rounded_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/design_dp_40"
        android:layout_marginTop="@dimen/design_dp_8"
        android:background="@drawable/button_green_brand"
        android:text="Done"
        android:visibility="visible"/>
</com.alexanderageychenko.ecometer.Model.ExRelativeLayout>