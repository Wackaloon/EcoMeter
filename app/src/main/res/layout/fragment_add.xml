<?xml version="1.0" encoding="utf-8"?>
<com.alexanderageychenko.ecometer.Model.ExContainers.ExRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:elevation="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/design_dp_8">

        <include layout="@layout/list_item_home" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_card"
        android:layout_marginBottom="@dimen/design_dp_8"
        android:layout_marginLeft="@dimen/design_dp_16"
        android:layout_marginRight="@dimen/design_dp_16"
        android:layout_marginTop="@dimen/design_dp_8"
        app:cardElevation="@dimen/card_default_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/new_value_text"
                style="@style/AppTheme.TextViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/design_dp_16"
                android:layout_marginTop="@dimen/design_dp_16"
                android:text="Current Value:" />

            <com.alexanderageychenko.ecometer.View.custom_view.MultiplePickerView
                android:id="@+id/mPicker"
                android:layout_below="@+id/new_value_text"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/design_dp_16"
                android:layout_marginBottom="@dimen/design_dp_16"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/done"
                style="@style/AppTheme.ButtonShadow.Button"
                android:layout_width="@dimen/button_rounded_width"
                android:layout_height="@dimen/button_rounded_height"
                android:layout_below="@+id/mPicker"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/design_dp_16"
                android:background="@drawable/button_green_brand"
                android:text="Done"
                android:visibility="visible" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</com.alexanderageychenko.ecometer.Model.ExContainers.ExRelativeLayout>