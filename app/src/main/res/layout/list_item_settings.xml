<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/card_default_elevation"
        android:layout_marginBottom="@dimen/design_dp_8"
        android:layout_marginLeft="@dimen/design_dp_16"
        android:layout_marginRight="@dimen/design_dp_16"
        android:layout_marginTop="@dimen/design_dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_dp_70">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/design_dp_70"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:padding="@dimen/design_dp_12"
                android:src="@drawable/ic_public_white_48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/image_edit"
                android:layout_marginLeft="@dimen/design_dp_8"
                android:layout_toRightOf="@+id/image">

                <TextView
                    android:id="@+id/name"
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/design_dp_8"
                    android:layout_marginTop="@dimen/design_dp_8"
                    android:text="Some Nmae" />
            </RelativeLayout>
                <ImageView
                    android:id="@+id/image_edit"
                    android:layout_width="@dimen/design_dp_70"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/image_delete"
                    android:layout_alignParentTop="true"
                    android:background="@color/main_yellow"
                    android:padding="@dimen/design_dp_12"
                    android:src="@android:drawable/ic_menu_edit"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/image_delete"
                    android:layout_width="@dimen/design_dp_70"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/main_red"
                    android:padding="@dimen/design_dp_12"
                    android:src="@android:drawable/ic_menu_delete"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>