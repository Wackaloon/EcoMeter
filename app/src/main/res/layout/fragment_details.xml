<?xml version="1.0" encoding="utf-8"?>
<com.alexanderageychenko.ecometer.Model.ExLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_dp_16"
        android:layout_marginLeft="@dimen/design_dp_16"
        android:layout_marginRight="@dimen/design_dp_16"
        android:layout_marginTop="@dimen/design_dp_16"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/design_dp_80"
                android:layout_height="@dimen/design_dp_80"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                android:padding="@dimen/design_dp_12"
                android:src="@drawable/ic_public_white_48dp"
                android:transitionName="image" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/design_dp_70"
                android:layout_marginLeft="@dimen/design_dp_8"
                android:layout_toRightOf="@+id/image">

                <TextView
                    android:id="@+id/name"
                    style="@style/AppTheme.TextViewMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/design_dp_8"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Some Nmae" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name">


                    <TextView
                        android:id="@+id/mean_day_title"
                        style="@style/AppTheme.TextViewMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/design_dp_8"
                        android:text="Average consumption per day:"
                        android:textSize="@dimen/fonts_sizes_12" />

                    <TextView
                        android:id="@+id/mean_month_title"
                        style="@style/AppTheme.TextViewMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mean_day_title"
                        android:layout_marginTop="@dimen/design_dp_8"
                        android:text="Average consumption per month:"
                        android:textSize="@dimen/fonts_sizes_12" />

                    <TextView
                        android:id="@+id/mean_day_text"
                        style="@style/AppTheme.TextViewMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/design_dp_8"
                        android:layout_marginRight="@dimen/design_dp_8"
                        android:layout_alignParentRight="true"
                        android:text="36345567"
                        android:textSize="@dimen/fonts_sizes_12" />

                    <TextView
                        android:id="@+id/mean_month_text"
                        style="@style/AppTheme.TextViewMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mean_day_text"
                        android:layout_marginTop="@dimen/design_dp_8"
                        android:layout_marginRight="@dimen/design_dp_8"
                        android:layout_alignParentRight="true"
                        android:text="36345567"
                        android:textSize="@dimen/fonts_sizes_12" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/design_dp_16"
        android:layout_marginLeft="@dimen/design_dp_16"
        android:layout_marginRight="@dimen/design_dp_16"
        android:layout_marginTop="@dimen/design_dp_16"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                style="@style/AppTheme.TextViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/design_dp_8"
                android:text="Last Data" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/details_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="@dimen/design_dp_8"
                android:layout_marginRight="@dimen/design_dp_8"
                android:layout_marginTop="@dimen/design_dp_8">

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_dp_1"
                android:layout_below="@+id/details_recycler_view"
                android:layout_marginBottom="@dimen/design_dp_8"
                android:layout_marginLeft="@dimen/design_dp_32"
                android:layout_marginRight="@dimen/design_dp_32"
                android:background="@color/light_grey" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</com.alexanderageychenko.ecometer.Model.ExLinearLayout>