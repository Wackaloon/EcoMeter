<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.ButtonShadow.Button" parent="AppTheme.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/fonts_sizes_16</item>
        <item name="fontPath">fonts/Asap-Regular.ttf</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@anim/button_elevation</item>
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
        <item name="android:translationZ" tools:ignore="NewApi">2dp</item>
    </style>
    <style name="AppTheme.Button" parent="Theme.AppCompat.Light">
        <item name="android:width">@dimen/design_dp_270</item>
        <item name="android:gravity">center</item>
        <item name="fontPath">fonts/Asap-Regular.ttf</item>
    </style>

    <style name="AppTheme.TextViewMain" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/fonts_sizes_16</item>
        <item name="android:textColor">@color/font_black</item>
        <item name="fontPath">fonts/Asap-Regular.ttf</item>
        <item name="android:gravity">left</item>
    </style>
</resources>
